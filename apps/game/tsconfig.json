{
  "extends": "@granity/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@engine/*": [
        "../../packages/engine/src/*"
      ],
      "@ui/*": [
        "../../packages/ui/src/*"
      ],
      "@widgets/*": [
        "../../packages/widgets/src/*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "types/next-auth.d.ts",
    "next.config.js",
    "workbox-config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
